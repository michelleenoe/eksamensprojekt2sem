---
const {data}=Astro.props; 
---
<article class={`grid-item ${data.subsub_category}`} data-category={data.subsub_category}>
    <a href={`/products/${data.slug}`}>
      <img class="image" src={data.image}>
    </a>
    <div class="item-info">
      <a href={`/products/${data.slug}`}>
        <h3 class="h3">{data.brand_front}</h3>
      </a>
      <h4 class="h4">{data.price} </h4>
      {data.soldout_1 && (
        <h4 class="soldout">
          {data.soldout_1.toLowerCase() === "soldout" ? "Sold Out" : data.soldout_1}
        </h4>
      )}
      {data.price && data.price.toLowerCase() !== "soldout" && (
        <button type="button" name="btn">
          <a class="knap" href={`/products/${data.slug}`}>
            <p>KØB</p>
          </a>
        </button>
      )}
    </div>
  </article>

  <style>

 
    
      /* knap */
      button {
      color: #7a1c44;
      font-size: 16px;
      border: none;
      padding: 2px 50px;
      cursor: pointer;
      margin-top: 10px;
      background-color: transparent;
      border: 1px solid #7a1c44;
    
    }
    
    button p {
      font-family: var(--font-family-roman);
      color: var(--cta-text);
    }
    
    button:hover {
      background-color: #7a1c44;
      color: white; 
      
    }
    
    button:hover p {
      color: white;
    }
    
    
      /* id til javascript */
      .hide {
        display: none;
      }
    
      /* tekst - brand, pris  */
      .item-info {
        padding: 10px;
        text-align: center;
        padding-bottom: 30px;
      }
    
      .h4 {
        font-family: var(--font-family-roman);
        font-weight: 100 !important;
      }
    
      .h3 {
        font-family: var(--font-family-roman);
      }
    
      

    
      .grid-container {
        display: grid;
        grid-template-columns: 1fr;
        padding-bottom: 100px;
      }
      .grid-item {
        text-align: center;
        padding: 10px;
        background-color: var(--background-color);
      }
    
      .image {
        width: 100%;
        height: auto;
        scale: 100%;
      }
    
    
    
      .knap:hover {
        text-decoration: none;
      }
      
    
      /* styling på soldout - den ligger med en <p> rundt om som er span stylet i koden ^ */
    
      .soldout {
        color: var(--cta-text);
        font-family: var(--font-family-medium);
      }
  
    
     
    
      @media screen and (min-width: 767px) {
        .image {
          height: 80%;
          width: 80%;
          object-fit: cover;
        }
       
       
        .item-info {
          margin-top: 20px;
        }
    
      }
    </style>
    