</body>
<style>
  .header {
    padding-top:50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 100px;

  }

  .horizontal-navigation {
    flex-grow: 1;
    position: relative;
  }
  .logo1 {
    display: none;
    position: absolute;
  }
  .nav-list {
    list-style-type: none;
    margin: 0;
    padding: 0 130px;
    gap: 100px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .nav-list li a:hover {
    color: var(--cta-text);
  }

  .nav-list li a {
    text-decoration: none;
    padding: 0 10px;
    color: var(--primary-text);
  }

  .logo img {
    width: 350px;
    display: block;
    margin: 0 auto;
  }

  .logo {
    flex: 1;
  }

  .cta-button {
    color: white;
    background: #7a1c44;
    padding: 4px 15px 4px 15px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background: #9c1652;
    text-decoration: none;
  }

  .cta-button a {
    color: white !important;
  }
  .cross-icon,
  .burger-icon {
    display: none;
  }

  @media only screen and (max-width: 768px) {
    .nav-list {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 80px;
      right: 0;
      width: 450%;
      background-color: var(--background-color);
      z-index: 1;
      gap: 20px;
      padding: 10px;
    }

    .nav-list.show {
      display: flex;
    }

    .burger-icon,
    .cross-icon {
      display: block;
      font-size: 40px;
      position: absolute;
      right: 15px;
      cursor: pointer;
    }
    .cart1 {
      display: none;
    }
    .cross-icon {
      font-size: 55px;
      color: var(--cta-text);
    }

    .burger-icon:hover {
      color: var(--cta-text);
    }
    .cta-button,
    .cta-button:hover {
      background: transparent;
    }
    .cta-button a {
      color: var(--cta-text) !important;
    }

    .cross-icon {
      display: none;
    }

    .burger-icon.show {
      display: none;
    }

    .cross-icon.show {
      display: block;
    }

    .logo {
      display: none;
    }
    .grid-container {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }
    .logo1 {
      grid-column: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      scale: 90%;
      top: -10%;
      position: relative;
    }

    .cart {
      grid-column: 2;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      top: -13%;
    }
    .burger-container {
      grid-column: 3;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }

  @media only screen and (min-width: 769px) {
    .burger-icon,
    .cross-icon {
      display: none;
    }
    .cart {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const burgerContainer = document.querySelector(".burger-container");
    const navList = document.querySelector(".nav-list");
    const burgerIcon = document.querySelector(".burger-icon");
    const crossIcon = document.querySelector(".cross-icon");

    function toggleMenu() {
      navList.classList.toggle("show");
      burgerIcon.classList.toggle("show");
      crossIcon.style.display = navList.classList.contains("show")
        ? "block"
        : "none";
    }

    crossIcon.style.display = "none";

    if (burgerContainer) {
      burgerContainer.addEventListener("click", toggleMenu);
    }
  });
</script>
