const { myData } = Astro.props;
console.log("myData in component:", myData);
---

<Mainlayout title={myData.brand}>
  <section>
    <a class="backbtn" href="/listeview/">&#8592;</a>
  </section>
  <section class="product-section">
    <div class="image-container">
      {
        myData.images.map((image, index) => (
          <img src={image} alt="" key={index} />
        ))
      }
    </div>
    <div></div>
    <div class="text-container">
      <h2>{myData.price}</h2>
      <div class="info">{myData.brand}</div>
    </div>
  </section>

  <style>
    .backbtn {
      font-size: 45px;
      color: var(--cta-text);
      text-decoration: none;
      cursor: pointer;
      position: absolute;
      right: 85%;
      bottom: 55%;
    }
    .product-section {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 3px;
    }

    .text-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }

    .image-container {
      overflow: hidden;
      height: 100vh;
      display: flex;
      flex-direction: column;
      transition: transform 0.5s ease;
    }

    img {
      width: 100%;
      height: auto;
    }
  </style>
</Mainlayout>
