<Mainlayout title="SHOP">
  <div class="filter">
    <a
    class="filterbutton active"
    data-filter="all"
    >All</a
  > 
  <span class="separator">|</span>
    <a
      class="filterbutton active"
      data-filter="top"
      >Top</a
    > 
    <span class="separator">|</span>
    <a
      class="filterbutton"
      data-filter="bottom"
      >Bottom</a
    > 
    <span class="separator">|</span>
    <a
      class="filterbutton"
      data-filter="accessories">Accessories</a
    > 
  </div>

  <section class="grid-container" id="articles-container">
    {
      data.map((item) => (
        <article class={`grid-item ${item.subsub_category}`} data-category={item.subsub_category}>
          <a href={`/products/${item.slug}`}>
            <img class="image" src={item.image} alt="Produktskud" />
          </a>
          <div class="item-info">
            <a href={`/products/${item.slug}`}>
              <h3 class="h3">{item.brand_front}</h3>
            </a>
            <h4 class="h4">{item.price}</h4>
          </div>
        </article>
      ))
    }
  </section>
</Mainlayout>

<script>
  const btns = document.querySelectorAll(".filterbutton");
  btns.forEach(btn=>{
    btn.addEventListener("click", ()=>filterBy(btn.dataset.filter));
  })
  
  function filterBy(cat){
    console.log(cat)
    document.querySelectorAll("article.grid-item").forEach(art=>{
      if(art.dataset.category===cat || cat==="all"){
        //vises
        art.classList.remove("hide")
      } else {
        //skjules
        art.classList.add("hide")
      }
    })
  }
</script>
<style>
  .hide {
    display:none;
  }
  
  .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); 
    gap: 10px;
    padding-bottom: 100px;
  }

  .grid-item {
    text-align: center;
    padding: 10px;
    background-color: var(--background-color);
  }

  .image {
    width: 100%;
    height:550px;
    object-fit: cover;
    display: block;
  }

  .item-info {
    padding: 10px;
    text-align: center;
  }

  .h4 {
    font-family: var(--font-family-roman);
    font-weight: 100 !important;
  }

  .h3 {
    font-family: var(--font-family-roman);
  }

  .filter {
    display: flex;
    justify-content: space-around;
    align-items: center;
    text-decoration: none;
    overflow: hidden;
    margin: 5px 0;
    display: flex;
    justify-content: center;
    letter-spacing: 1.6px;
cursor: pointer;
  }

  .filterbutton {
    position: relative;
    display: inline-block;
    padding: 10px;
    text-transform: uppercase;
    letter-spacing: 4px;
    text-decoration: none;
    font-size: 15px;
    overflow: hidden;
    transition: 0.2s;
    margin: 5px 0;
  }

  .filterbutton.active {
    color: var(--cta-text);
  }

  @media only screen and (max-width: 767px) {
    .image {
      width: 100%;
      height: 550px;
    }

    .filterbutton:hover {
      cursor: pointer;
    }

    .filterbutton {
      position: relative;
      display: inline-block;
