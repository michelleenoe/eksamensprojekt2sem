export function filterArticles(category) {
  data.forEach((item) => {
    if (category === "top" || item.subsub_category === category) {
    }
  });

  console.log("Filtering articles by category:", category);
  const articlesContainer = document.getElementById("articles-container");
  const filterButtons = document.querySelectorAll(".filterbutton");
  let activeButton = document.querySelector(".filterbutton.active");

  if (activeButton) {
    activeButton.classList.remove("active");
  }

  articlesContainer.innerHTML = "";

  data.forEach((item) => {
    if (category === "top" || item.subsub_category === category) {
      const articleElement = document.createElement("div");
      articleElement.classList.add("grid-item", item.subsub_category);
      articleElement.innerHTML = `
        <a href="/products/${item.slug}">
          <img class="image" src="${item.image}" alt="Produktskud" />
        </a>
        <div class="item-info">
          <a href="/products/${item.slug}">
            <h3 class="h3">${item.brand_front}</h3>
          </a>
          <h4 class="h4">${item.price}</h4>
        </div>
      `;
      articlesContainer.appendChild(articleElement);
    }
  });

  const clickedButton = Array.from(filterButtons).find(
    (button) => button.dataset.filter === category
  );
  if (clickedButton) {
    activeButton = clickedButton;
    activeButton.classList.add("active");
  }
}
---

<Mainlayout title="SHOP">
  <div class="filter">
    <a
      class="filterbutton active"
      data-filter="top"
      on:click={() => filterArticles("top")}>Top</a
    >
    <a
      class="filterbutton"
      data-filter="bottom"
      on:click={() => filterArticles("bottom")}>Bottom</a
    >
    <a
      class="filterbutton"
      data-filter="accessories"
      on:click={() => filterArticles("accessories")}>Accessories</a
    >
  </div>

  <section class="grid-container" id="articles-container">
    {
      data.map((item) => (
        <div class={`grid-item ${item.subsub_category}`} key={item.slug}>
          <a href={`/products/${item.slug}`}>
            <img class="image" src={item.image} alt="Produktskud" />
